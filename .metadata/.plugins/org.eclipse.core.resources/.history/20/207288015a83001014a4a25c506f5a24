package V1;

import java.util.Arrays;

public class Mountain06 {
	public static void main(String[] args) {
		int arr[]= {5,6,1,2,3,4,5,4,3,2,0,1,2,3,-2,4};
		System.out.println(Arrays.toString(arr));
		System.out.println(findlargestMountain(arr));
	}
	public static Integer findlargestMountain(int arr[]) {
		int largestMountain=0;
		for(int i=1;i<=arr.length-2;) { 
			
			
			if(arr[i]>arr[i-1] && arr[i]>arr[i+1]) {
				int count=0;
				int leftlow=i;
				
				while(arr[leftlow]>arr[leftlow-1]) {
					System.out.println(arr[i]);
					count++;
					if(leftlow!=0)
					 leftlow--;
					i--;
				}
				while(arr[i]>arr[rightlow]) {
					count++;
					if(leftlow!=0)
					rightlow++;
					i++;
				}
				if(largestMountain<count) {
				largestMountain=count;
				count=0;
				}
			}
			
		}
		return largestMountain;
		
	}

}
